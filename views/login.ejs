<%- include('partials/header'); -%>
<div class="bod login">
    <div class="row">
        <div class="col-lg-4 col-sm-12 mobileErr">
            <% if(messages.error){ %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong><%= messages.error %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
        </div>
        <div class="col-lg-8 col-sm-12">
            <div class="container socio">
                <div class="design">
                    <h1>Welcome back pal :)</h1>
                    <div class="row">
                        <div class="col-lg-6 social contents">
                            <a class="btn btn-large btn-block fb" href="/auth/facebook">Login with <i
                                    class="fab fa-facebook"></i></a>
                            <a class="btn btn-large btn-block g" href="/auth/google">Login with <i
                                    class="fab fa-google"></i></a>
                            <a class="btn btn-large btn-block tw" href="/auth/twitter">Login with <i
                                    class="fab fa-twitter"></i></a>
                        </div>
                        <div class="col-lg-6 reg">
                            <h2>Login with your email</h2>
                            <form action="/login" method="POST">
                                <label class="Email" for="exampleFormControlTextarea1"><strong>Email</strong></label>
                                <input type="email" name="username" required="required" class="form-control norad"
                                    id="email" autocomplete="email" placeholder="put your email here"
                                    autocomplete="off">
                                <label class="Password"
                                    for="exampleFormControlTextarea1"><strong>Password</strong></label>
                                <input type="password" required="required" name="password" class="form-control norad"
                                    placeholder="enter the password" id="password" autocomplete="off">
                                <button type="submit" class="btn btn-block btn-success gap">Log in</button>
                                <div class="form-check">
                                    <input class="form-check-input" name="checkBox" onchange="checkBox()"
                                        type="checkbox" id="defaultCheck1">
                                    <label class="form-check-label" for="defaultCheck1">
                                        Remember me for 30 days
                                    </label>
                                </div>
                            </form>
                            <div class="link">
                                <a class="loginLink" href="/register">Don't have an account? Hurry! register now.</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-12 pcErr">
            <% if(messages.error){ %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong><%= messages.error %></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
        </div>
    </div>
</div>
</div>
</div>
</div>
<%- include('partials/footer'); -%>